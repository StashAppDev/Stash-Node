{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceRoot}/src/index.ts", "start"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "outputCapture": "std"
        },
        {
            "name": "Run Scan",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceRoot}/src/index.ts", "scan"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "outputCapture": "std"
        }
    ]
}